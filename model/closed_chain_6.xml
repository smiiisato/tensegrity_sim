<mujoco model="single_module">
  <option collision="predefined" timestep="0.002"/>

  <default>
    <site size="0.005" rgba="1 1 1 1"/>
    <geom contype="0" conaffinity="1" size="0.005"/>
  </default>

  <asset>
    <mesh name="slider" file="./mesh/slider.STL" scale="1e-3 1e-3 1e-3"/>
  </asset>
  <worldbody>
    <light cutoff="4.0" diffuse="1 1 1" dir="-0.9 -0.9 -2.5" directional="true" exponent="20" pos="0.9 0.9 2.5" specular="0 0 0"/>
    <geom name="ground" pos="0 0 -0.2" rgba="0.25 0.26 0.25 1" size="10 10 2" type="plane" contype="0"/>
    <body name="base" pos="0 0 0">
      <geom name="base" type="box" pos="0 0 0" size="0.3 0.01 0.0075" rgba="1 0 0 1" contype="1"/>


      <body name="slider" pos="0 0 0">
        <geom name="slider" pos="0.165 0.012 0.019" type="mesh" mesh="slider" euler="180 0 0" mass="0.02"/>
        <joint name="slider" type="slide" axis="1 0 0"/>
        <body name="slider_link" pos="0 0 0">
          <geom name="slider_link" type="capsule" fromto="0.1725 0.02 -0.0265 0.0 0.02 -0.05" rgba="0 1 0 1"/>
          <joint name="slider_link" type="hinge" axis="0 1 0" pos="0.1725 0.012 -0.0265"/>
          <body name="motor_link" pos="0 0 0">
            <geom name="motor_link" type="capsule" fromto="0.0 0.02 -0.05 0.0 0.02 0.0" rgba="0 1 0 1"/>
            <joint name="motor_link" pos="0.0 0.2 -0.05" type="hinge" axis="0 1 0"/>
          </body>
        </body>
      </body>
    </body>

  </worldbody>
  <equality>
    <connect anchor="0.0 0.0 0.0" body1="base" body2="motor_link"/>
  </equality>
  <actuator>
    <position kp="1" name="motor" joint="motor_link"/>
  </actuator>

</mujoco>
